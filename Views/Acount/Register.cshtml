@model Art_ShopVF.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<form method="post" enctype="multipart/form-data" asp-action="Register">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="md-form form-sm mb-2">
        <label>Your Name</label>
        <input type="text" asp-for="UserName" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>Your email</label>
        <input type="email" asp-for="Email" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>Your password</label>
        <input type="password" asp-for="Password" class="form-control form-control-sm validate">

    </div>
    <div class="md-form form-sm mb-2">
        <label>Repeat password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>Address</label>
        <input type="text" asp-for="Adress" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>Country</label>
        <input type="text" asp-for="Country" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>City</label>
        <input type="text" asp-for="City" class="form-control form-control-sm validate">
    </div>
    <div class="md-form form-sm mb-2">
        <label>Phone</label>
        <input type="text" asp-for="Phone" class="form-control form-control-sm validate">
    </div>
    <div class="form-group row">
        <div class="custom-file">
            <input asp-for="Photos" class="form-control custom-file-input">
            <label class="custom-file-label">Choose File...</label>
        </div>
    </div>
    <div class="md-form form-sm mb-2">
        <label>Gender</label><br />
        <input type="radio" asp-for="Gender" name="gender" value="M" /><label class="ml-4">Male   </label><br />
        <input type="radio" asp-for="Gender" name="gender" value="F" /><label class="ml-4">Female </label>
    </div>
    <div class="form-group mb-2 col-md-12">
        @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
        <div class="custom-file">
            @Html.DropDownListFor(m => m.Role, new List<SelectListItem>(ViewBag.Roles), new { @class = "form-control" })
            @*@Html.DropDownList("Roles")*@
        </div>
    </div>
    <div class="text-center form-sm mt-2 mb-2">
        <button type="submit" class="btn btn-outline-secondary mb-2">Sign up <i class="fas fa-sign-in ml-1"></i></button>
    </div>
    <div class="modal-footer mt-2 mb-5">
        <div class="options text-right">
            <p class="pt-1">Already have an account? <a asp-action="Login" class="blue-text">Log In</a></p>
        </div>
        <button type="button" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary waves-effect ml-auto " data-dismiss="modal">Close</button>
    </div>
    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    console.log("done")
                    var fileLabel = $(this).next('.custom-file-label');
                    var files = $(this)[0].files;
                    console.log(files)
                    if (files.length > 1) {
                        fileLabel.html(files.length + ' files selected');
                        console.log(fileLabel)
                    }
                    else if (files.length == 1) {
                        console.log("second done")
                        fileLabel.html(files[0].name);
                        console.log(fileLabel)
                    }
                });
            });
        </script>
    }
</form>

